#!/usr/bin/env python3
from pytube import YouTube
import os

def download_video(url, save_path="~/Downloads"):
    """Download a single YouTube video."""
    try:
        yt = YouTube(url)
        print(f"📽️ Title: {yt.title}")
        print(f"🕒 Duration: {yt.length // 60}m {yt.length % 60}s")

        # Get the highest resolution stream
        stream = yt.streams.get_highest_resolution()
        
        # Download to specified path (default: ~/Downloads)
        save_path = os.path.expanduser(save_path)  # Handles '~' in path
        stream.download(output_path=save_path)
        
        print(f"✅ Downloaded: {yt.title}")
    except Exception as e:
        print(f"❌ Error: {e}")

if __name__ == "__main__":
    print("🎬 YouTube Video Downloader")
    url = input("Enter YouTube URL: ")
    download_video(url)
